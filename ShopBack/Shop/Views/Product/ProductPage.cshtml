@model Product
<main class="product_page">
    <section class="product">
        <div class="container">
            <div class="product_top">
                <img class="product_img" src="~/@Model.ImageUrl" alt="">
                <div class="product-buy-info">
                    <h1>@Model.Name</h1>
                    <p>Классический мягкий диван в бежевом цвете с бархатной обивкой.</p>
                    @if (Model.IsDiscount)
                    {
                        <span>@Model.DiscountPrice&nbsp;руб</span>
                        <s>@Model.Price&nbsp;руб</s>
                    }
                    else
                    {
                        <span>@Model.Price&nbsp;руб</span>
                    }
                    <form method="post" asp-action="ProductPage" asp-controller="Product">
                        <div class="counter">
                            <button class="counter__button button_minus" type="button">
                                <img src="~/img/svg-icons/remove-outline.svg">
                            </button>
                            <input type="text" name="productQuantity" value="1" class="counter_input" 
                                   onkeydown="return specialText(this, event)" maxlength="2" onblur="if (this.value == '0') { this.value = 1; }">
                            <input type="hidden" asp-for="@Model.Id"/>
                            <button class="counter__button button_plus" type="button">
                                <img src="~/img/svg-icons/add-outline.svg">
                            </button>
                        </div>
                        <button class="counter_submit">
                            <span class="cart_img"></span>
                            <span>КУПИТЬ</span>
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </section>
</main>